{
  "name": "keboola/google-drive-extractor",
  "license": "MIT",
  "type": "project",
  "description": "Keboola Google Drive Extractor",
  "keywords": ["keboola", "google", "drive", "spreadsheets", "extractor"],
  "authors": [
    {
      "name": "Miroslav Čillík",
      "email": "miro@keboola.com"
    }
  ],
  "require": {
    "php": "^7.3",
    "ext-json": "*",
    "keboola/csv": "^2.1",
    "pimple/pimple": "^3.0",
    "monolog/monolog": "^1.25",
    "symfony/config": "^3.0",
    "symfony/yaml": "^3.0",
    "symfony/process": "^3.0",
    "guzzlehttp/guzzle": "^6.2",
    "keboola/php-temp": "^2.0",
    "keboola/google-client-bundle": "^5.0"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "^1.0",
    "infection/infection": "^0.14",
    "phpstan/phpstan-shim": "^0.11",
    "phpunit/phpunit": "^8.0",
    "keboola/coding-standard": ">=7.0.2"
  },
  "autoload": {
    "psr-4": {
      "Keboola\\": "src/Keboola/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Keboola\\GoogleDriveExtractor\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests": "phpunit --log-junit=build/logs/phpunit.junit.xml",
    "phpstan": "phpstan analyse --no-progress --level=max src tests -c phpstan.neon",
    "phpcs": "phpcs --extensions=php src tests",
    "phpcbf": "phpcbf --extensions=php src tests",
    "phplint": "parallel-lint -j 10 --exclude vendor .",
    "build": [
      "@phplint",
      "@phpcs",
      "@phpstan",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-all --strict",
      "@build"
    ]
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 3600
  }
}
