{
  "name": "keboola/google-drive-extractor",
  "license": "MIT",
  "type": "project",
  "description": "Keboola Google Drive Extractor",
  "keywords": ["keboola", "google", "drive", "spreadsheets", "extractor"],
  "require": {
    "php": "^7.4",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.0",
    "keboola/csv": "^2.1",
    "keboola/google-client-bundle": "^5.3",
    "keboola/php-component": "^8.1",
    "keboola/php-temp": "^2.0",
    "monolog/monolog": "^2.2",
    "pimple/pimple": "^3.3",
    "symfony/config": "^5.2",
    "symfony/process": "^5.2"
  },
  "require-dev": {
    "keboola/coding-standard": ">=7.0.2",
    "keboola/datadir-tests": "^5.2",
    "php-parallel-lint/php-parallel-lint": "^1.2",
    "phpstan/phpstan": "^0.12.64",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Keboola\\GoogleDriveExtractor\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Keboola\\GoogleDriveExtractor\\Tests\\": "tests/phpunit/",
      "Keboola\\GoogleDriveExtractor\\FunctionalTests\\": "tests/functional/"
    }
  },
  "scripts": {
    "tests-phpunit": "phpunit",
    "tests-datadir": "phpunit tests/functional",
    "tests": [
      "@tests-phpunit",
      "@tests-datadir"
    ],

    "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
    "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
    "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
    "phplint": "parallel-lint -j 10 --exclude vendor .",
    "build": [
      "@phplint",
      "@phpcs",
      "@phpstan",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-publish --no-check-all",
      "@build"
    ]
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 3600
  }
}
